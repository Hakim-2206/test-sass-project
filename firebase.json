{
  "hosting": {
    "public": "client/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "http://localhost:3000, http://127.0.0.1:3000"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET,PUT,POST,DELETE,OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization, X-Workspace-Token"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'self' http://localhost:3000 http://127.0.0.1:3000;"
          }
        ]
      }
    ],
    "rewrites": []
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "server",
      "region": "europe-west1",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "**/dev/**",
        "**/devService.*"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8081
    },
    "database": {
      "port": 9000
    },
    "pubsub": {
      "port": 8086
    },
    "auth": {
      "port": 9099
    },
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true,
    "export-on-exit": "./emulator-data",
    "import": "./emulator-data"
  }
}
